<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Phone body (rounded rectangle, slightly tilted) -->
    <group
        android:pivotX="54"
        android:pivotY="54"
        android:rotation="-8">

        <!-- Phone outer shell -->
        <path
            android:pathData="M38,24 L70,24 Q74,24 74,28 L74,80 Q74,84 70,84 L38,84 Q34,84 34,80 L34,28 Q34,24 38,24Z"
            android:fillColor="#00796B" />

        <!-- Phone screen -->
        <path
            android:pathData="M38,30 L70,30 L70,76 L38,76Z"
            android:fillColor="#E0F2F1" />

        <!-- Camera notch (small circle at top) -->
        <path
            android:pathData="M54,27 m-2,0 a2,2 0,1 1,4 0 a2,2 0,1 1,-4 0"
            android:fillColor="#004D40" />

    </group>

    <!-- Pencil trace on screen (wavy line, same tilt) -->
    <group
        android:pivotX="54"
        android:pivotY="54"
        android:rotation="-8">

        <path
            android:pathData="M42,58 Q48,44 54,53 Q60,62 66,48"
            android:strokeColor="#00796B"
            android:strokeWidth="2.5"
            android:strokeLineCap="round"
            android:fillColor="#00000000" />

        <!-- Small pencil tip at end of trace -->
        <path
            android:pathData="M66,48 L69,43"
            android:strokeColor="#004D40"
            android:strokeWidth="2"
            android:strokeLineCap="round" />

    </group>

</vector>
